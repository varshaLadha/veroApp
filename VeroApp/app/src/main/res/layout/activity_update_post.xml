<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lcom151_two.veroapp.UpdatePost">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Post Update"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/postText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:text="Post Text"/>

    <EditText
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/postText"
        android:layout_alignBottom="@+id/postText"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/postText"
        android:layout_toRightOf="@+id/postText" />

    <Button
        android:id="@+id/updatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postContent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Update Post"
        android:textAllCaps="false"
        android:background="@drawable/button_border"/>
</RelativeLayout>
