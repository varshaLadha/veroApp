<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lcom151_two.veroapp.userProfile">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Set your profile"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/userpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/message"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"/>

    <Button
        android:id="@+id/selectpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userpic"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_stroke"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Select profile pic"/>

    <EditText
        android:id="@+id/displayname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectpic"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="20dp"
        android:hint="Enter your name"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayname"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:hint="Enter your email"/>

    <Button
        android:id="@+id/setProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:background="@drawable/button_bg_stroke"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Set profile"/>
</RelativeLayout>
